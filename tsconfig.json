{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "rootDir": "./src",
  "incremental": true,
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.cjs", "**/*.mjs"]
}
